{
  "log": {
    "enabled": true,
    "debug": false,
    "console": true,
    "output": ""
  },
  "profiles": {
    "development": ["serve", "watch", "lint", "compile"]
  },
  "lint": {
    "locations": [ "*.json", "src/**/*.ts" ],
    "rules": { }
  },
  "serve": {
    "sslKey": "node_modules/@vladmandic/build/cert/https.key",
    "sslCrt": "node_modules/@vladmandic/build/cert/https.crt",
    "httpPort": 10050,
    "httpsPort": 10051,
    "documentRoot": "",
    "defaultFolder": "public/",
    "defaultFile": "index.html",
    "cors": false
  },
  "build": {
    "global": {
      "target": "es2018",
      "sourcemap": true,
      "treeShaking": true,
      "ignoreAnnotations": true,
      "minify": false,
    "banner": { "js": "/*\n  anime\n  homepage: <https://github.com/vladmandic/anime>\n  author: <https://github.com/vladmandic>'\n*/\n" }
    },
    "development": {
      "minify": true
    },
    "targets": [
      {
        "name": "client",
        "format": "esm",
        "platform": "browser",
        "input": "src/anime.ts",
        "output": "dist/anime.js"
      },
      {
        "name": "sockets",
        "format": "esm",
        "platform": "browser",
        "input": "src/sockets.ts",
        "output": "dist/sockets.js"
      },
      {
        "name": "node",
        "format": "cjs",
        "platform": "node",
        "input": "src/node.ts",
        "output": "dist/node.js",
        "external": ["@tensorflow", "sharp"]
      }
    ]
  },
  "watch": {
    "locations": [ "src/**/*" ]
  },
  "typescript": {
    "allowJs": false
  }
}
